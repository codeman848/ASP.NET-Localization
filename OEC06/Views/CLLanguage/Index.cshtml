@{
    ViewBag.Title = "Choose Language";
}

<h2>@ViewBag.Title</h2>
@using (@Html.BeginForm())
{
    <h2>
        Current Culture, Language:
        @System.Threading.Thread.CurrentThread.CurrentCulture,
        @System.Threading.Thread.CurrentThread.CurrentUICulture
    </h2>
    <br />
    <hr />

    <text>Select Language:</text>@Html.DropDownList("Languages")
    
    <input type="submit" value="@Resources.Translations.Submit" />
}
