@model IEnumerable<OEC06.Models.farm>

@{
    ViewBag.Title = "Farm Listing";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New Farm", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.town)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.provinceCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.county)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastContactDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.town)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.province.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.county)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastContactDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.farmId }) |
            @Html.ActionLink("Details", "Details", new { id=item.farmId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.farmId })
        </td>
    </tr>
}

</table>
